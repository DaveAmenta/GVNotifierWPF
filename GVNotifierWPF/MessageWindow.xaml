                    <Label.BitmapEffect>
                        <OuterGlowBitmapEffect GlowColor="#ccFFFFFF" GlowSize="7"></OuterGlowBitmapEffect>
                    </Label.BitmapEffect>
                </Label>
                   
                <ComboBox MouseLeave="cboNumbers_MouseLeave" 
                          Visibility="Hidden" 
                          Name="cboNumbers"
                           
                          HorizontalAlignment="Center"
                          VerticalAlignment="Bottom"
                          Text="(555) 123-4567 (Work)" />
